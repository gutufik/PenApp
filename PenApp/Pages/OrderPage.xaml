<Page x:Class="PenApp.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PenApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Date" />
        <TextBlock Text="Customer" Grid.Row="1"/>
        <TextBlock Text="Pen" Grid.Row="2"/>
        <TextBlock Text="Count" Grid.Row="3"/>

        <DatePicker Name="dpDate" Grid.Column="1" SelectedDate="{Binding Order.Date}"/>
        <ComboBox x:Name="cbCustomer" Grid.Row="1" Grid.Column="1"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding Order.Customer}"
                  DisplayMemberPath="Name"/>

        <ComboBox x:Name="cbPen" Grid.Row="2" Grid.Column="1" 
                  ItemsSource="{Binding Pens}"
                  SelectedItem="{Binding Order.Customer}"
                  DisplayMemberPath="Name"/>
        <TextBox x:Name="tbCount" 
                 Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Order.Count}"/>


        <Button x:Name="btnDelete" Content="Delete" 
                Grid.Row="4"
                Click="btnDelete_Click"/>
        
        <Button x:Name="btnSave" Content="Save" 
                Grid.Row="4" Grid.Column="1"
                Click="btnSave_Click"/>
    </Grid>
</Page>

<Page x:Class="PenApp.Pages.PenListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PenApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PenListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnBurger" Content="=" Click="btnBurger_Click"/>
        <ListView x:Name="LvPens"
                  Grid.Row="1"
                  ItemsSource="{Binding Pens}"/>
        <Rectangle x:Name="myRectange" Fill="Red" Panel.ZIndex="1" 
                   Grid.Row="1" Width="200" HorizontalAlignment="Left"
                   />

    </Grid>
</Page>
